{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "react": [
        "node_modules/@types/react"
      ]
    },
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ]
}